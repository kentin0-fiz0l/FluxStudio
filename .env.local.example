# ============================================
# FluxStudio Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
# Project Settings > API

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key (safe for browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Your Supabase service role key (server-side only, keep secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# APPLICATION SETTINGS
# ============================================
# The base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name (used in emails, metadata, etc.)
NEXT_PUBLIC_APP_NAME=FluxStudio

# ============================================
# AUTHENTICATION PROVIDERS (OPTIONAL)
# ============================================
# Configure these in Supabase Dashboard > Authentication > Providers

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Figma OAuth (optional)
# FIGMA_CLIENT_ID=your-figma-client-id
# FIGMA_CLIENT_SECRET=your-figma-client-secret

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Maximum file upload size in bytes (default: 50MB)
NEXT_PUBLIC_MAX_UPLOAD_SIZE=52428800

# Allowed file types (comma-separated MIME types)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,model/gltf-binary,model/gltf+json

# ============================================
# FEATURE FLAGS (OPTIONAL)
# ============================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_VIDEO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_AUDIO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME_COLLABORATION=true

# ============================================
# ANALYTICS & MONITORING (OPTIONAL)
# ============================================
# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# PostHog for analytics
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug logging
DEBUG=false
