# ============================================
# FluxStudio Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
# The base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API base URL (if separate from app URL)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Application name (used in emails, metadata, etc.)
NEXT_PUBLIC_APP_NAME=FluxStudio

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/fluxstudio

# Redis URL (for sessions/caching)
# REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
# JWT secret for signing tokens (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Session secret
SESSION_SECRET=your-session-secret-key

# Token expiry (in seconds)
ACCESS_TOKEN_EXPIRY=900
REFRESH_TOKEN_EXPIRY=604800

# ============================================
# OAUTH PROVIDERS (OPTIONAL)
# ============================================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Figma OAuth
# FIGMA_CLIENT_ID=your-figma-client-id
# FIGMA_CLIENT_SECRET=your-figma-client-secret

# ============================================
# FILE STORAGE
# ============================================
# Storage provider: 'local', 's3', 'gcs', 'do-spaces'
STORAGE_PROVIDER=local

# Local storage path (for development)
STORAGE_LOCAL_PATH=./uploads

# S3/DigitalOcean Spaces configuration
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com (for DO Spaces)

# Maximum file upload size in bytes (default: 50MB)
NEXT_PUBLIC_MAX_UPLOAD_SIZE=52428800

# Allowed file types (comma-separated MIME types)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,model/gltf-binary,model/gltf+json

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_VIDEO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_AUDIO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME_COLLABORATION=true

# ============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ============================================
# SMTP settings for transactional emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# EMAIL_FROM=noreply@fluxstudio.io

# ============================================
# ANALYTICS & MONITORING (OPTIONAL)
# ============================================
# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# PostHog for analytics
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug logging
DEBUG=false
