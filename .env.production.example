# Flux Studio Production Environment Configuration
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control

# Node Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_USER=fluxstudio
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=fluxstudio

# Authentication
JWT_SECRET=generate_with_crypto_randomBytes_128_hex
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# Frontend URLs
VITE_API_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM=noreply@your-domain.com

# Grafana Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# File Upload
MAX_FILE_SIZE=100mb
UPLOAD_DIR=/var/www/fluxstudio/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=use_same_as_jwt_secret

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-domain.com

# Logging
LOG_LEVEL=info
