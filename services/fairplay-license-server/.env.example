# FairPlay License Server Configuration

# Server
PORT=3002
NODE_ENV=development

# FairPlay Credentials (from Apple)
# Get these from https://developer.apple.com/streaming/fps/
FPS_CERTIFICATE_PATH=./credentials/fps_cert.der
FPS_PRIVATE_KEY_PATH=./credentials/fps_private_key.pem
FPS_ASK_SECRET_NAME=fluxstudio/fairplay/ask

# AWS Configuration
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=alias/fluxstudio-content-keys

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fluxstudio

# JWT Authentication (must match main FluxStudio API)
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=debug

# License Configuration
LICENSE_DURATION=3600
MAX_CONCURRENT_STREAMS=3

# CORS
ALLOWED_ORIGINS=https://fluxstudio.art,http://localhost:5173
