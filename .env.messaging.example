# Flux Studio Messaging System - Environment Configuration
# Copy this file to .env and fill in your values
# This extends the existing .env.example with messaging-specific variables

# ===========================================
# EXISTING CONFIGURATION (keep these)
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=65518208813-9ipe2nakc6sind9tbdppl6kr3dnh2gjb.apps.googleusercontent.com

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-this

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Database
DB_PATH=./fluxstudio.db

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changethispassword

# ===========================================
# MESSAGING SYSTEM CONFIGURATION (new)
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3002

# WebSocket Server
WS_PORT=3002
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_MAX_CONNECTIONS=1000

# Redis Cache (for real-time features)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""

# AI Services Configuration
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_ENABLE_AI_FEATURES=true
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,svg,fig,sketch
UPLOAD_PATH=./uploads

# AWS S3 Configuration (optional, for cloud storage)
AWS_S3_BUCKET=fluxstudio-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Messaging Features
FEATURE_REALTIME_COLLABORATION=true
FEATURE_AI_FEEDBACK=true
FEATURE_WORKFLOW_AUTOMATION=true
FEATURE_CONVERSATION_INSIGHTS=true
FEATURE_VISUAL_ANNOTATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MESSAGE_RATE_LIMIT=50

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
HELMET_CSP=default-src 'self'
BCRYPT_ROUNDS=10

# Monitoring & Analytics
ENABLE_MONITORING=true
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_ENVIRONMENT=development
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
COMPRESSION_LEVEL=6
ENABLE_GZIP=true

# Development Tools
VITE_HMR_PORT=5173
VITE_HMR_HOST=localhost
ENABLE_HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=sqlite:./test.db
TEST_REDIS_URL=redis://localhost:6380
TEST_PORT=3001

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# For production, uncomment and update these:
# NODE_ENV=production
# VITE_API_URL=https://api.fluxstudio.com
# VITE_WS_URL=wss://ws.fluxstudio.com
# REDIS_URL=redis://your-redis-url
# JWT_SECRET=your-super-secure-production-secret
# SENTRY_ENVIRONMENT=production
# LOG_LEVEL=info

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Vercel
VERCEL_TOKEN=your-vercel-token

# Docker
DOCKER_REGISTRY=your-registry-url
DOCKER_IMAGE_TAG=latest

# CI/CD
GITHUB_TOKEN=your-github-token
SLACK_WEBHOOK=https://hooks.slack.com/services/...

# SSL/TLS
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===========================================
# FEATURE FLAGS
# ===========================================

# Beta Features
BETA_AI_VOICE_MESSAGES=false
BETA_SCREEN_SHARING=false
BETA_ADVANCED_SEARCH=false
BETA_MOBILE_APP_SYNC=false

# Experimental Features
EXPERIMENTAL_AI_MODELS=false
EXPERIMENTAL_REALTIME_CANVAS=false
EXPERIMENTAL_AR_ANNOTATIONS=false