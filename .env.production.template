# ============================================
# FluxStudio Production Environment Variables
# ============================================
# Set these as environment variables in your hosting platform

# ============================================
# APPLICATION SETTINGS (REQUIRED)
# ============================================
NEXT_PUBLIC_APP_URL=https://fluxstudio.yourdomain.com
NEXT_PUBLIC_API_URL=https://fluxstudio.yourdomain.com/api
NEXT_PUBLIC_APP_NAME=FluxStudio
NODE_ENV=production

# ============================================
# DATABASE (REQUIRED)
# ============================================
DATABASE_URL=postgresql://user:password@your-db-host:5432/fluxstudio

# Redis (recommended for production)
# REDIS_URL=redis://your-redis-host:6379

# ============================================
# AUTHENTICATION (REQUIRED)
# ============================================
JWT_SECRET=your-production-jwt-secret-min-32-characters
SESSION_SECRET=your-production-session-secret
ACCESS_TOKEN_EXPIRY=900
REFRESH_TOKEN_EXPIRY=604800

# ============================================
# FILE STORAGE (REQUIRED)
# ============================================
STORAGE_PROVIDER=s3

# For DigitalOcean Spaces or AWS S3
S3_BUCKET=your-bucket-name
S3_REGION=nyc3
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,model/gltf-binary,model/gltf+json

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_3D_VIEWER=true
NEXT_PUBLIC_ENABLE_VIDEO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_AUDIO_ANNOTATIONS=true
NEXT_PUBLIC_ENABLE_REALTIME_COLLABORATION=true

# ============================================
# OAUTH PROVIDERS (OPTIONAL)
# ============================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# FIGMA_CLIENT_ID=your-figma-client-id
# FIGMA_CLIENT_SECRET=your-figma-client-secret

# ============================================
# EMAIL (RECOMMENDED)
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# EMAIL_FROM=noreply@fluxstudio.io

# ============================================
# MONITORING (RECOMMENDED)
# ============================================
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
